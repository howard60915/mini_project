<!DOCTYPE html>
<html>
  <head>
    <title>MiniProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>



	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				
				<% if flash[:notice].present? %>
					<div class="alert alert-danger" role ="alert">
						<span style="color: green"><%= flash[:notice] %></span>
					</div>
				<% end %>

				<% if flash[:alert].present? %>
					<div class="alert alert-danger" role ="alert">
						<span style="color: red"><%= flash[:alert]%></span>
					</div>
				<% end %>	
				
				
				<% if current_user %>
					<% if current_user.profile %>
						Hi ,<%= link_to current_user.email , user_profile_path(current_user) %>
					<% else %>
						Hi ,<%= link_to current_user.email , new_user_profile_path(current_user) %>
					<% end  %>
				    <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
				    <%= link_to('修改密碼', edit_registration_path(:user)) %> 
				  <% else %>
				    <%= link_to('註冊', new_registration_path(:user)) %> |
				    <%= link_to('登入', new_session_path(:user)) %>
			    <% end %>
				

				<%= yield %>
			</div>
		</div>
	</div>
	


    
  </body>
</html>
