<% if @topic.errors.any?%>
	<% @topic.errors.full_messages.each do |msg| %>
		<%= msg %>
	<% end %>
<% end %>


<div class="form-group">
	<%= f.label :title , "Topic Title"%>
	<%= f.text_field :title , :class => "form-control"%>
</div>

<div class="form-group">
	<%= f.label :logo , "上傳照片" %>
	<%= f.file_field :logo %>
	<% if @topic.logo.exists?%>	
		<%= check_box_tag "remove_upload_file", "1" %>移除上傳檔案
	<% end %>
</div>

<div class="form-group">
	<%= f.label :status, "Status" %>
    <%= f.select :status, [["Published", "published"],["Draft","draft"]] , :class => "form-control" %>
</div>


<div class="form-group">
		<%= f.collection_check_boxes(:category_ids ,Category.all ,:id ,:name )%>
</div>

<div class="form-group">
	<%= f.label :tag , "Tag"%>
	<%= f.text_field :tag, size: 30 , :class => "form-control", :placeholder => "Make a tag" %>
</div>

<div class="form-group">
	<%= f.label :content , "Topic Content"%>
	<%= f.text_area :content , :class => "form-control"%>
</div>


