<% if @topic.errors.any?%>
	<% @topic.errors.full_messages.each do |msg| %>
		<%= msg %>
	<% end %>
<% end %>


<div class="form-group">
	<%= f.label :title , "Topic Title"%>
	<%= f.text_field :title , :class => "form-control"%>
</div>

<div class="form-group">
	<%= f.label :logo , "上傳照片" %>
	<%= f.file_field :logo %>
	<% if @topic.logo.exists?%>	
		<%= check_box_tag "remove_upload_file", "1" %>移除上傳檔案
	<% end %>
</div>

<div class="form-group">
	<%= f.label :photos , "上傳多張照片", :class => "control-label" %>
	<%= file_field_tag "images[]", type: :file, multiple: true %>
	<% if @topic.photos.exists?%>	
		<%= check_box_tag "remove_upload_photo", "2" %>移除圖片
	<% end %>
</div>

<div class="form-group">
	<%= f.label :status, "Status" %>
    <%= f.select :status, [["Published", "published"],["Draft","draft"]] , :class => "form-control" %>
</div>


<div class="form-group">
		<%= f.collection_check_boxes(:category_ids ,Category.all ,:id ,:name )%>
</div>

<div class="form-group">
	<%= f.label :all_tags, "Tag" %>
  <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
</div>

<div class="form-group">
	<%= f.label :content , "Topic Content"%>
	<%= f.text_area :content , :class => "form-control"%>
</div>


